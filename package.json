{
  "name": "filtering-system-strutio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "stack:up": "docker-compose -f ./docker-compose.yml up -d",
    "stack:down": "docker-compose -f ./docker-compose.yml down",
    "format": "prettier --list-different 'src/**/*{.css,.scss,.mdx}'",
    "format:fix": "yarn format --write",
    "tslint": "eslint 'src/**/*{.ts,.tsx}'",
    "tslint:fix": "eslint --fix 'src/**/*{.ts,.tsx}'",
    "lint": "yarn tslint && yarn format",
    "lint:fix": "yarn format:fix && yarn tslint:fix"
  },
  "dependencies": {
    "@radix-ui/themes": "^3.1.6",
    "@tanstack/react-query": "^5.62.2",
    "classnames": "^2.5.1",
    "next": "15.0.3",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/prompt": "17.1.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "commitizen": "4.1.2",
    "eslint": "8.57.1",
    "eslint-config-next": "12.3.4",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-tailwindcss": "3.17.5",
    "eslint-plugin-unused-imports": "3.2.0",
    "husky": "7.0.4",
    "lint-staged": "13.3.0",
    "postcss": "^8",
    "prettier": "2.8.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*{.ts,.tsx}": [
      "yarn lint:fix"
    ],
    "*{.md,.scss,.json,.css}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}
